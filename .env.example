# JWT MySQL Automation Service - Environment Configuration
# Copy this to .env and update with your production values

# MySQL Database Configuration
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASS=secure_production_password_2025
MYSQL_DB=arkane_settings

# JWT Configuration
JWT_SECRET=super_secure_jwt_secret_key_production_2025

# Optional: Database User (for non-root access)
MYSQL_USER_NAME=arkane_user
MYSQL_USER_PASS=secure_user_password_2025

# Production Settings (automatically set in Docker)
ENVIRONMENT=production
LOG_LEVEL=INFO

# DigitalOcean Managed Database (if using separate DB)
MANAGED_DB_HOST=your-managed-db-host.db.ondigitalocean.com
MANAGED_DB_USER=doadmin
MANAGED_DB_PASS=your-managed-db-password
MANAGED_DB_NAME=arkane_settings
MANAGED_DB_PORT=25060
